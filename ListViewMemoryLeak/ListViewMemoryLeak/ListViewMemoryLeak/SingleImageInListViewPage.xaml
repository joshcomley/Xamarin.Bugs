<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="ListViewMemoryLeak.SingleImageInListViewPage">
	<ListView x:Name="MyList" RowHeight="300">
		<ListView.ItemTemplate Height="300">
			<DataTemplate>
				<ViewCell Height="300">
					<ViewCell.View>
						<Image WidthRequest="300" HeightRequest="300" Source="{Binding WebImage}"/>
					</ViewCell.View>
				</ViewCell>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
</ContentPage>